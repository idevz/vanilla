    #     my $lib_option;
    #     if ($platform eq 'macosx') {
    #         $lib_option = "-bundle -undefined dynamic_lookup";
    #     } else {
    #         $lib_option = "-shared";
    #     }

    #     my $extra_opts = " DESTDIR=\$(DESTDIR) LUA_INC=$lua_inc LUA_LIBDIR=$lualib_prefix " .
    #         "LUA_CMODULE_DIR=$lualib_prefix LUA_MODULE_DIR=$lualib_prefix" . 
